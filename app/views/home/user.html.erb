<h2>Hi there <%= current_user.display %>!</h2>

<div class="row-fluid">
<% if current_user.communities.any? %>
  <h3>Your Communities<h3>
  <% current_user.communities.each do |community| %>
    <%= link_to community.name, community_path(community), class: 'community-block' %>
  <% end %>
<% else %>
  <p>You aren't a part of any communities yet, <%= link_to 'create one now', new_community_path %>!</p>
<% end %>
</div>
