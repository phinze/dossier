<h1>Create {{login}}</h1>
<form>
  <fieldset>
    <div>
      <label {{bindAttr for="loginField.elementId"}}>Login</label>
      {{view Ember.TextField valueBinding='login' name='login' viewName='loginField'}}
    </div>
    <div>
      <label {{bindAttr for='fullNameField.elementId'}}>Full Name</label>
      {{view Ember.TextField valueBinding='fullName' name='last_name' viewName='fullNameField'}}
    </div>
    <a href='#' {{action save}} class='btn btn-success'>Create</a>
  </fieldset>
</form>
<div class='page-header'></div>

<a href='#' {{action cancel}} class='btn btn-inverse'>Cancel</a>
